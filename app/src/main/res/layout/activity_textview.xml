<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:text="textview元件三"
            android:background="#8BC34A"
            android:gravity="bottom|left"
            />
        <TextView
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:text="textview元件四"
            android:background="#E91E63"
            android:gravity="bottom|right"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:text="textview元件六"
            android:background="#03A9F4"
            android:gravity="top|right"
            />
        <TextView
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:text="textview元件七"
            android:background="#9C27B0"
            android:gravity="top|left"
            />

    </LinearLayout>

    <TextView
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:text="元件一gravity=center"
        android:background="#FF5722"
        android:gravity="center_vertical"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="元件二match_parent/wrap_content"
        android:textColor="#3F51B5"
        android:textSize="30sp"
        android:background="#00BCD4"

        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="元件五文字置中/粗體/斜體"
        android:textAlignment="center"

        android:textStyle="bold|italic"
        android:background="#FFC107"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="textview元件八"
        android:layout_gravity="right"
        android:background="#009688"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="layout_gravity"
        android:layout_gravity="right"
        android:background="#009688"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="layout_gravity"
        android:layout_gravity="right"
        android:background="#009688"
        />


</LinearLayout>